            <option >English</option>
            <option >Mandarin</option>
            <option >Kiswahili</option>
        </select>
        <span class="text-danger" asp-validation-for="Language"></span>
    </div> *@
    <div class="form-group">
        <label asp-for="TotalPages"></label>
        <input asp-for="TotalPages" class="form-control" />
        <span class="text-danger" asp-validation-for="TotalPages"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverImage"></label>
        <div class="custom-file">
            <input type="file" asp-for="CoverImage" id="customFile" class="custom-file-input">
            <label for="customFile" class="custom-file-label">Choose File</label>
        </div>
        <span class="text-danger" asp-validation-for="CoverImage"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryFiles"></label>
        <div class="custom-file">
            <input type="file" asp-for="GalleryFiles" id="customFile" class="custom-file-input">
            <label for="customFile" class="custom-file-label">Choose File</label>
        </div>
        <span class="text-danger" asp-validation-for="GalleryFiles"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookPdf"></label>
        <div class="custom-file">
            <input type="file" asp-for="BookPdf" id="customFile" class="custom-file-input">
            <label for="customFile" class="custom-file-label">Upload PDF</label>
        </div>
        <span class="text-danger" asp-validation-for="BookPdf"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        @* <input asp-for="Description" class="form-control" /> *@
        <textarea name="Description" asp-for="Description"  class="form-control" cols="30" rows="10"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>  
    <div class="form-group">
        <input type="submit" value="addbook" class="btn btn-primary" />
    </div>  

    
</form>
</div>

