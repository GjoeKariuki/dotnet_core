    </div> *@
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
        <span class="text-danger" asp-validation-for="Title"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="LanguageId"></label>
        <select class="form-control" asp-for="LanguageId" asp-items="ViewBag.LanguageId" required multiple>
            <option value="">choose book language</option>
        </select>
        <span class="text-danger" asp-validation-for="LanguageId"></span>
    </div>
    @* <div class="form-group">
        <label asp-for="LanguageEnum"></label>
        <select class="form-control" asp-for="LanguageEnum" asp-items="Html.GetEnumSelectList<LanguageEnum>()" required>
            <option value="">choose book language</option>
        </select>
        <span class="text-danger" asp-validation-for="LanguageEnum"></span>
    </div> *@
    @* <div class="form-group">
        <label asp-for="Language"></label>
        <select class="form-control" asp-for="Language" required>
            <option value="">choose book language</option>
