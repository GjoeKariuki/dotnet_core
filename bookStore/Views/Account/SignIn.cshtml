@model bookStore.Models.UserSigninModel
@{
    Layout = null;
}


<!Doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>SignIn</title>
        <environment include="Development">
            <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        </environment>
        <environment exclude="Development">
            <link rel="stylesheet"
                href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
                asp-fallback-href=""
                asp-fallback-test-class="sr-only"
                asp-fallback-test-property="position"
                asp-fallback-test-value="absolute"
                integrity=""
                crossorigin="anonymous"
              />
        </environment> 
    </head>
    <body>
        <div class="container">
            <h4 class="display-4">Log-In</h4>
            <hr/>
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input asp-for="RememberMe" class="form-check-input"> @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="SignIn" class="btn btn-primary">
                        </div>
                    </form>
                </div>
                <div class="col-md-8">
                    <img src="~/login.png" alt="login image" class="img-fluid">
                </div>
            </div>
            <div>
                <p><a asp-action="ForgotPasword" asp-controller="Account">Forgot Password</a></p>
                <p>Click <a asp-action="Signup" asp-controller="Account">here</a>to register</p>
            </div>
        </div>
    </body>
</html>